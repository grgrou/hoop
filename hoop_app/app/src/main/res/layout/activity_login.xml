<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/login_background">

    <RelativeLayout
        android:id="@+id/layoutLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/lato_regular"
            android:text="Bienvenido!"
            android:textColor="#fff"
            android:textSize="21sp" />

        <EditText
            android:id="@+id/lblUsername"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:layout_below="@+id/txtWelcome"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/lbl_user_background"
            android:fontFamily="@font/lato_regular"
            android:hint="Usuario"
            android:inputType="text"
            android:paddingLeft="36dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/lblPassword"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:layout_below="@+id/lblUsername"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/lbl_password_background"
            android:fontFamily="@font/lato_regular"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:paddingLeft="36dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:layout_below="@+id/lblPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_login_background"
            android:fontFamily="@font/lato_regular"
            android:text="Ingresar"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="12sp"
            android:onClick="login"/>

        <ImageView
            android:id="@+id/txtPrivacity"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:layout_below="@+id/btnLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:contentDescription="Policity and Privacity"
            android:src="@drawable/txt_login_bottom" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="Regístrate"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="#fff"
            android:fontFamily="@font/lato_regular"
            android:onClick="register"/>
    </RelativeLayout>

</RelativeLayout>